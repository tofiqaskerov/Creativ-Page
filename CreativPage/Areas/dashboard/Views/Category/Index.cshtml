@model List<Category>

<a class="btn btn-success mb-4" href="/dashboard/category/Create">Create</a>
@if (Model != null)
{
    <table class="table table-bordered table-striped table-dark">
        <tr>
            <th>Id</th>
            <th>Category Name</th>

        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>

                <td>
                    <a href="/dashboard/category/Edit/@category.Id" class="btn btn-outline-warning btn-sm ">Edit</a>
                    <a href="/dashboard/category/Detail/@category.Id" class="btn btn-outline-info btn-sm">Detail</a>
                    <a href="/dashboard/category/Delete/@category.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-info">Bazada melumat yoxdur</div>
}
